@model Assignment5_GC.Models.MusicGenreViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Music Store</h1>

<form asp-controller="Musics" asp-action="Index" method="get">
    <p>

        Genre:
        <select id="MusicGenre" asp-for="MusicGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>


        Performer(s):
        <select id="MusicPerformers" asp-for="MusicPerformers" asp-items="Model.Performers">
            <option value="">All</option>
        </select>

        <input type="submit" value="Filter" />
        <input type="submit" value="Send to Shopping Cart" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].purchase_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].performer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Musics!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchase_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.performer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <label>
                    <input type="checkbox" asp-action="Details" asp-route-id="@item.id" />
                    Add to Cart
                </label>
            </td>
            
        </tr>
}
    </tbody>
</table>
